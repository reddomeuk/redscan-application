# Cloud Integration Environment Configuration
# Copy this file to .env and fill in your actual values

# ============================================================================
# AZURE AD / ENTRA ID CONFIGURATION
# ============================================================================

# Azure Application Registration
VITE_AZURE_CLIENT_ID=your-azure-client-id
VITE_AZURE_CLIENT_SECRET=your-azure-client-secret
VITE_AZURE_TENANT_ID=your-tenant-id-or-common

# Azure Redirect URIs (must match exactly in Azure AD)
VITE_AZURE_REDIRECT_URI=https://yourdomain.com/auth/callback/azure

# Required Azure API Permissions:
# Microsoft Graph:
# - User.Read (Delegated)
# - Directory.Read.All (Application)
# - SecurityEvents.Read.All (Application)
# - SecurityActions.Read.All (Application)
# - SecurityIncident.Read.All (Application)
# - ThreatIndicators.Read.All (Application)
# - IdentityRiskEvent.Read.All (Application)
# - IdentityRiskyUser.Read.All (Application)

# ============================================================================
# AWS CONFIGURATION
# ============================================================================

# AWS OAuth App Configuration (for AWS SSO integration)
VITE_AWS_CLIENT_ID=your-aws-sso-client-id
VITE_AWS_CLIENT_SECRET=your-aws-sso-client-secret
VITE_AWS_EXTERNAL_ID=unique-external-id-for-role-assumption

# AWS Cross-Account Role Configuration
# Create IAM role with the following trust policy:
# {
#   "Version": "2012-10-17",
#   "Statement": [
#     {
#       "Effect": "Allow",
#       "Principal": {
#         "AWS": "arn:aws:iam::YOUR-REDSCAN-ACCOUNT:root"
#       },
#       "Action": "sts:AssumeRole",
#       "Condition": {
#         "StringEquals": {
#           "sts:ExternalId": "your-external-id"
#         }
#       }
#     }
#   ]
# }

# Required IAM Policies:
# - SecurityAudit (AWS Managed)
# - ReadOnlyAccess (AWS Managed) - Optional, for resource discovery
# Custom policy for additional permissions:
# {
#   "Version": "2012-10-17",
#   "Statement": [
#     {
#       "Effect": "Allow",
#       "Action": [
#         "securityhub:GetFindings",
#         "securityhub:DescribeStandards",
#         "guardduty:GetDetector",
#         "guardduty:GetFindings",
#         "inspector:DescribeFindings",
#         "config:GetComplianceDetailsByConfigRule",
#         "cloudtrail:LookupEvents",
#         "access-analyzer:GetAnalyzer",
#         "access-analyzer:ListFindings"
#       ],
#       "Resource": "*"
#     }
#   ]
# }

# ============================================================================
# GOOGLE CLOUD / WORKSPACE CONFIGURATION
# ============================================================================

# Google OAuth 2.0 Client Configuration
VITE_GOOGLE_CLIENT_ID=your-google-client-id.apps.googleusercontent.com
VITE_GOOGLE_CLIENT_SECRET=your-google-client-secret

# Google Cloud Project Configuration
VITE_GOOGLE_CLOUD_PROJECT_ID=your-gcp-project-id
VITE_GOOGLE_WORKSPACE_CUSTOMER_ID=your-workspace-customer-id

# Required Google Cloud APIs (enable in Google Cloud Console):
# - Security Center API
# - Cloud Asset Inventory API
# - Cloud Logging API
# - Cloud Monitoring API
# - Admin SDK API
# - Google Workspace Alert Center API

# OAuth 2.0 Scopes Configuration:
# - https://www.googleapis.com/auth/cloud-platform.read-only
# - https://www.googleapis.com/auth/admin.directory.user.readonly
# - https://www.googleapis.com/auth/admin.directory.group.readonly
# - https://www.googleapis.com/auth/admin.reports.audit.readonly
# - https://www.googleapis.com/auth/securitycenter.readonly

# ============================================================================
# GITHUB CONFIGURATION
# ============================================================================

# GitHub OAuth App Configuration
VITE_GITHUB_CLIENT_ID=your-github-oauth-app-client-id
VITE_GITHUB_CLIENT_SECRET=your-github-oauth-app-client-secret

# GitHub Enterprise Configuration (if applicable)
VITE_GITHUB_ENTERPRISE_URL=https://github.yourcompany.com
VITE_GITHUB_API_URL=https://api.github.com

# Required OAuth Scopes:
# - repo (for private repositories)
# - security_events (for security alerts)
# - read:org (for organization access)
# - read:user (for user information)

# ============================================================================
# OFFICE 365 CONFIGURATION
# ============================================================================

# Office 365 uses same Azure AD configuration as above
# Additional scopes for Office 365 security:
# - Mail.Read
# - Calendars.Read
# - Sites.Read.All
# - Files.Read.All
# - ThreatAssessment.Request
# - InformationProtectionPolicy.Read

# ============================================================================
# SECURITY CONFIGURATION
# ============================================================================

# Encryption keys for token storage (generate secure random keys)
VITE_ENCRYPTION_KEY=your-32-character-encryption-key
VITE_SIGNING_KEY=your-jwt-signing-key

# Session configuration
VITE_SESSION_TIMEOUT=3600
VITE_TOKEN_REFRESH_THRESHOLD=300

# CORS configuration
VITE_ALLOWED_ORIGINS=https://yourdomain.com,https://app.yourdomain.com

# ============================================================================
# WEBHOOK CONFIGURATION
# ============================================================================

# Webhook URLs for real-time notifications
VITE_WEBHOOK_BASE_URL=https://yourdomain.com/webhooks

# Webhook secrets for signature verification
VITE_AZURE_WEBHOOK_SECRET=your-azure-webhook-secret
VITE_AWS_WEBHOOK_SECRET=your-aws-webhook-secret
VITE_GOOGLE_WEBHOOK_SECRET=your-google-webhook-secret
VITE_GITHUB_WEBHOOK_SECRET=your-github-webhook-secret

# ============================================================================
# DEVELOPMENT CONFIGURATION
# ============================================================================

# Set to 'development' for local development
NODE_ENV=production

# Enable debug logging in development
VITE_DEBUG_OAUTH=false
VITE_DEBUG_API_CALLS=false

# Mock mode for testing without real cloud connections
VITE_MOCK_CLOUD_CONNECTIONS=false
